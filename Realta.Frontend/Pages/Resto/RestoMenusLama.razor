<style>

    .upload-container {
        position: relative;
        display: inline-block;
    }

    .upload-img {
        display: block;
        width: 100%;
        height: auto;
    }

    .upload-label {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 0.5rem;
        background-color: rgba(0, 0, 0, 0.5);
        color: #fff;
        font-size: 1rem;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .upload-label:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .upload-label i {
            margin-right: 0.5rem;
        }


    .upload-img {
        width: 125px;
        height: 125px;
    }

    .upload-container1 {
        position: relative;
    }

    .upload-label-wrapper {
        position: absolute;
        bottom: 10px;
        left: 10px;
    }


    .upload-container {
        margin-bottom: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

        .upload-container:not(:last-child) {
            margin-right: 20px;
        }

        .upload-container img {
            display: block;
            margin: 0 auto;
        }

</style>

