<!-- Modal update -->

<div class="modal modal-lg fade" id="update" tabindex="-1" aria-labelledby="EditLabel" aria-hidden="true">
    <div class="modal-dialog">
        <EditForm autocomplete="off" class="modal-content card-style" Model="_restoDto" OnValidSubmit="OnUpdateConf">
            <DataAnnotationsValidator />
            <div class="modal-header">
                <h5 class="modal-title" id="EditLabel">Add Resto Menus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="input-style-1 col-9 rounded-sm">
                        <label>Resto Name</label>
                        <div class="select-position">
                            <InputText id="RemeName" @bind-Value="_restoDto.RemeName" />
                            <ValidationMessage For="@(() => _restoDto.RemeName)" />
                        </div>
                    </div>
                    <div class="input-style-1 col-3 rounded-sm">
                        <label>Price</label>
                        <div class="select-position">
                            <InputNumber id="RemePrice" @bind-Value="_restoDto.RemePrice" min="0" />
                            <ValidationMessage For="@(() => _restoDto.RemePrice)" />


                        </div>

                    </div>
                    <div class="select-style-1 col-6 rounded-sm">
                        <label>Status</label>
                        <div class="select-position">
                            <div class="select-position">
                                <InputSelect id="RemeStatus" @bind-Value="_restoDto.RemeStatus" class="form-control">
                                    <option value="Available">Available</option>
                                    <option value="Unavailable">Unavailable</option>
                                    <ValidationMessage For="@(() => _restoDto.RemeDescription)" />
                                </InputSelect>
                            </div>
                        </div>
                    </div>
                    <div class="input-style-1 col-6 rounded-sm">
                        <label>Type</label>
                        <div class="select-position">
                            <InputText id="RemeType" @bind-Value="_restoDto.RemeType" />
                            <ValidationMessage For="@(() => _restoDto.RemeType)" />
                        </div>
                    </div>
                </div>
            </div>
            <div>
            </div>
            <div class="action d-flex flex-wrap justify-content-end">
                <button type="button" data-bs-dismiss="modal" class="main-btn danger-btn-outline btn-hover m-1">
                    Cancel
                </button>
                <button data-bs-dismiss="modal" class="main-btn primary-btn btn-hover m-1">
                    Save
                </button>
            </div>
        </EditForm>
    </div>
</div>
