@page "/Ordermenus"
@using System.Reflection.Metadata
@inject NavigationManager NavigationManager

<style>

    .floating-wrapper {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 999;
        width: 50px; /* ubah lebar menjadi 50px */
        height: 50px;
    }

        .floating-wrapper .d-flex {
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            padding: 10px;
            border-radius: 5px;
        }

        .floating-wrapper button {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none; /* hapus border pada tombol */
            background-color: transparent; /* ubah background menjadi transparan */
            padding: 0; /* hapus padding pada tombol */
        }

            .floating-wrapper button img {
                width: 100%;
                height: 100%;
            }

</style>


<PageTitle>Order Menus</PageTitle>

<section class="card-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Order Menus</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Restomenus">Resto Menus</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Order Menus
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="d-flex flex-wrap justify-content-between align-items-center py-3" style="background-color: #ffffff">
                    <div class="left">
                        <div class="table-search d-flex">
                            <form action="#">
                                <div class="d-flex align-items-center">
                                    <Realta.Frontend.Components.Resto.Search OnSearchChanged="SearchChange" />
                                </div>
                                <button disabled><i class="lni lni-search-alt"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="right">
                        <div class="table-search d-flex">
                            <form action="#">
                                <div class="d-flex align-items-center">
                                    <Realta.Frontend.Components.Resto.Sort OnSortChanged="SortChgane" />
                                </div>

                            </form>
                        </div>


                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <br />

        <!-- ========== title-wrapper end ========== -->
        <!-- ========== cards-styles start ========== -->
        <div class="cards-styles">
            <div class="row">
                <div class="col">
                    <div class="row">
                        @foreach (var product in RestoMenusListPaging)
                        {
                            <div class="mb-30 col-xl-3 col-lg-3 col-md-4 col-sm-4">
                                <div class="card border-0">
                                    <img src="https://localhost:7068/Resources/Images/@product.RempPhotoFilename" class="card-img-top" alt="@product.RempPhotoFilename" width="150" height="150">
                                    <div class="card-body">
                                        <p class="card-text text-sm fw-bold text-muted">@product.RemeName</p>
                                        @String.Join(" ", @product.RemeDescription.Split(' ').Take(3))
                                        <div class="row">

                                            <div class="col-7">
                                                <p class="card-text text-sm">@product.RemeStatus</p>
                                            </div>
                                        </div>
                                        <p class="card-text text-sm fw-bold text-muted">IDR @product.RemePrice.ToString("N0")</p>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button @onclick="() => AddToCart(product)" class="main-btn dark-btn btn-sm rounded-bottom rounded-top-0 btn-hover w-100" data-bs-toggle="collapse" aria-expanded="false" aria-controls="cart">Add to cart</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>



                <div class="collapse col-3 @(CartIsOpen ? "show" : "")" id="cart">
                    <div class="card border-0">
                        <div class="card-header d-flex justify-content-between border-0">
                            <h6>Items Ordered</h6>
                            <button type="button" class="border-0 bg-transparent h6" @onclick="CloseCart">
                                <i class="lni lni-cross-circle"></i>
                            </button>
                        </div>
                        @if (Cart.Instance.Items.Any())
                        {
                            <div class="card-body">
                                @foreach (var item in Cart.Instance.Items)
                                {
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text text-sm fw-bold text-muted">
                                            <produk></produk>
                                        </p>
                                        <button type="button" class="border-0 bg-transparent h6" @onclick="() => RemoveItem(item.RestoMenusOrder.RemeId)">
                                            <i class="lni lni-trash-can text-danger"></i>
                                        </button>
                                    </div>
                                    <p class="card-text text-sm mb-2">@item.RestoMenusOrder.RemeName</p>
                                    <div class="row">
                                        <label for="price" class="card-text text-sm form-label text-muted col">Price</label>
                                        <div class="col-7">
                                            <input type="text" name="price" id="price" class="form-control form-control-sm text-sm text-muted border-0 bg-transparent" value="@item.RestoMenusOrder.RemePrice.ToString("C0", new CultureInfo("id-ID"))" readonly />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label for="qty" class="card-text text-sm form-label text-muted col">Qty</label>
                                        <div class="col-7">
                                            <input type="number" name="qty" id="qty" class="form-control form-control-sm text-sm text-muted border-0" min="1" value="@item.Quantity" @oninput="@(e => UpdateItemQuantity(item, int.Parse(e.Value.ToString())))" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label for="subtotal" class="card-text text-sm form-label text-muted col">Sub total</label>
                                        <div class="col-7">
                                            <input type="text" name="subtotal" id="subtotal" class="form-control form-control-sm text-sm text-muted border-0 bg-transparent" value="@item.Subtotal.ToString("C0", new CultureInfo("id-ID"))" readonly />
                                        </div>
                                    </div>
                                    <hr />
                                }
                                <div class="row">
                                    <label for="subtotal" class="card-text fw-bold form-label text-muted col">Sub total</label>
                                    <div class="col-7">
                                        <input type="text" name="subtotal" id="subtotal" class="form-control form-control-sm fw-bold text-muted border-0 bg-transparent" value="@Cart.Instance.TotalPriceExcludingTax.ToString("C0", new CultureInfo("id-ID"))" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <label for="tax" class="card-text fw-bold form-label text-muted col">Tax (10%)</label>
                                    <div class="col-7">
                                        <input type="text" name="tax" id="tax" class="form-control form-control-sm fw-bold text-muted border-0 bg-transparent" value="@Cart.Instance.TaxAmount.ToString("C0", new CultureInfo("id-ID"))" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <label for="total" class="card-text fw-bold form-label text-muted col">Total</label>
                                    <div class="col-7">
                                        <input type="text" name="total" id="total" class="form-control form-control-sm fw-bold text-muted border-0 bg-transparent" value="@Cart.Instance.TotalPrice.ToString("C0", new CultureInfo("id-ID"))" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a href="javascript:void(0)" class="main-btn primary-btn btn-sm rounded-0 btn-hover w-100 rounded-bottom rounded-top-0" @onclick="OnCreate">Request order</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- ========== cards-styles end ========== -->
        <Realta.Frontend.Components.Resto.Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPageOrder">  </Realta.Frontend.Components.Resto.Pagination>

    </div>
    <!-- end container -->
</section>


<div class="floating-wrapper">
    <div class="d-flex justify-content-end">
        <button @onclick="()=>CartIsOpen=!CartIsOpen" class="main-btn dark-btn btn-sm rounded-bottom rounded-top-0 btn-hover w-100" data-bs-toggle="collapse" aria-expanded="false" aria-controls="cart">
            <img src="https://www.citypng.com/public/uploads/preview/download-hd-shopping-cart-black-logo-icon-png-11640441685ymd041qjws.png" alt="Cart">
        </button>
    </div>
</div>
