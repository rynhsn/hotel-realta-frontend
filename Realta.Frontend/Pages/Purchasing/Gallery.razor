@page "/purchasing/gallery"
@inject NavigationManager NavigationManager

<PageTitle>Gallery</PageTitle>

<section class="card-components">
  <div class="container-fluid">
    <!-- ========== title-wrapper start ========== -->
    <div class="title-wrapper pt-30">
      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="title mb-30">
            <h2>Gallery</h2>
          </div>
        </div>
        <!-- end col -->
        <div class="col-md-6">
          <div class="breadcrumb-wrapper mb-30">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="/">Home</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="purchasing">Purchasing</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Gallery
                </li>
              </ol>
            </nav>
          </div>
        </div>
        <!-- end col -->
      </div>
      <!-- end row -->
    </div>
    <!-- ========== title-wrapper end ========== -->

    <!-- ========== cards-styles start ========== -->
    <div class="cards-styles">
      <div class="row">
        <div class="col">
          <div class="row">
            @foreach (var product in Products)
            {
              <div class="mb-30 col-xl-3 col-lg-3 col-md-4 col-sm-4">
                <div class="card border-0">
                  <img src="vendor/assets/images/products/product-mini-2.jpg" class="card-img-top" alt="...">
                  <div class="card-body">
                    <p class="card-text text-sm fw-bold text-muted">@product.StockName</p>
                    <p class="card-text text-sm mb-2">@product.VendorName</p>
                    <div class="row">
                      <div class="col">
                        <p class="card-text text-sm">Stck:@product.VeproQtyRemaining</p>
                      </div>
                      <div class="col-7">
                        <p class="card-text text-sm">ReOrd:@product.VeproQtyStocked</p>
                      </div>
                    </div>
                    <p class="card-text text-sm fw-bold text-muted">@product.VeproPrice.ToString("C0", new CultureInfo("id-ID"))</p>
                  </div>
                  <div class="d-flex justify-content-end">
                    <button @onclick="() => AddToCart(product.VeproId)" class="main-btn dark-btn btn-sm rounded-bottom rounded-top-0 btn-hover w-100" data-bs-toggle="collapse" aria-expanded="false" aria-controls="cart">Add to cart</button>
                  </div>
                </div>
              </div>
            }
          </div>
        </div>
        <div class="collapse col-3 @(_isCartOpen ? "show" : "")" id="cart">
          <div class="card border-0">
            <div class="card-header d-flex justify-content-between border-0">
              <h6>Items Ordered</h6>
              <button type="button" class="border-0 bg-transparent h6" @onclick="() => _isCartOpen = false">
                <i class="lni lni-close"></i>
              </button>
            </div>
            @if (Cart.Any())
            {
              <div class="card-body">
                @foreach (var item in Cart)
                {
                  <div class="d-flex justify-content-between">
                    <p class="card-text text-sm fw-bold text-muted">
                      @item.StockName <produk></produk>
                    </p>
                    <button type="button" class="border-0 bg-transparent h6" @onclick="() => RemoveItem(item)">
                      <i class="lni lni-trash-can text-danger"></i>
                    </button>
                  </div>
                  <p class="card-text text-sm mb-2">@item.VendorName</p>
                  <div class="row">
                    <label for="price" class="card-text text-sm form-label text-muted col">Price</label>
                    <div class="col-7">
                      <input type="text" name="price" id="price" class="form-control form-control-sm text-sm text-muted border-0 bg-transparent" value="@(item.VeproPrice.ToString("C0", new CultureInfo("id-ID")))" readonly/>
                    </div>
                  </div>
                  <div class="row">
                    <label for="qty" class="card-text text-sm form-label text-muted col">Qty</label>
                    <div class="col-7">
                      <input type="number" name="qty" id="qty" class="form-control form-control-sm text-sm text-muted border-0" min="1" value="@item.CartOrderQty" @onchange="@(e => UpdateItemQuantity(item, int.Parse(e.Value.ToString())))"/>
                    </div>
                  </div>
                  <div class="row">
                    <label for="subtotal" class="card-text text-sm form-label text-muted col">Sub total</label>
                    <div class="col-7">
                      <input type="text" name="subtotal" id="subtotal" class="form-control form-control-sm text-sm text-muted border-0 bg-transparent" value="@item.Subtotal.ToString("C0", new CultureInfo("id-ID"))" readonly/>
                    </div>
                  </div>
                  <hr/>
                }
                <div class="row">
                  <label for="subtotal" class="card-text fw-bold form-label text-muted col">Sub total</label>
                  <div class="col-7">
                    <input type="text" name="subtotal" id="subtotal" class="form-control form-control-sm fw-bold text-muted border-0 bg-transparent" value="@(SubTotal.ToString("C0", new CultureInfo("id-ID")))" readonly/>
                  </div>
                </div>
                <div class="row">
                  <label for="tax" class="card-text fw-bold form-label text-muted col">Tax (10%)</label>
                  <div class="col-7">
                    <input type="text" name="tax" id="tax" class="form-control form-control-sm fw-bold text-muted border-0 bg-transparent" value="@(TaxAmount.ToString("C0", new CultureInfo("id-ID")))" readonly/>
                  </div>
                </div>
                <div class="row">
                  <label for="total" class="card-text fw-bold form-label text-muted col">Total</label>
                  <div class="col-7">
                    <input type="text" name="total" id="total" class="form-control form-control-sm fw-bold text-muted border-0 bg-transparent" value="@(TotalPrice.ToString("C0", new CultureInfo("id-ID")))" readonly/>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-end">
                <a href="javascript:void(0)" class="main-btn primary-btn btn-sm rounded-0 btn-hover w-100 rounded-bottom rounded-top-0" @onclick="OnRequestOrder">Request order</a>
              </div>
            }
            else
            {
              <div class="row">    
                <h5 class="text-gray text-center my-5">cart is empty</h5>
              </div>
            }
            </div>
        </div>
      </div>
    </div>
    <!-- ========== cards-styles end ========== -->
  </div>
  <!-- end container -->
</section>

@* Floating button cart *@
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
  <button class="btn btn-primary d-flex align-items-center justify-content-center" style="width:55px; height: 55px" type="button" @onclick="() => _isCartOpen = !_isCartOpen">
    <i class="lni lni-cart"></i>
  </button>
</div>

<SuccessNotification @ref="_notif"/>